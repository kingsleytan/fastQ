<% provide(:title, "Edit Branch") %>

<div class="background-edit">
  <h1 style="color: black"> Edit: <%= @branch.name %></h1>
</div>

<%= form_for(@branch, url: office_branch_path(@branch.office, @branch), html: { id: "branch-edit-form" }) do |f| %>
  <h1 class="text-center">
    New Branch Name
  </h1>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Branch" %> </h4>
    <%= f.text_field :name, required: true, id: "branch_type_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= link_to "Back to Branches", office_branches_path, class: "btn btn-info" %>
    <%= f.submit "Update Branch", class: "btn btn-success btn-lg" %>
    <%= link_to "Delete Branch", office_branch_path(@branch.office, @branch), method: :delete, class: "btn btn-warning", data: { confirm: "Delete?" } %>
  </div>
<% end %>
