<% provide(:title, "#{@branch.name}") %>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">
                Update Your Branch Name
            </h1>
            <br/>
            <%= form_for(@branch, url: office_branch_path(@branch.office, @branch), html: { id: "branch-edit-form" }) do |f| %>

            <div class="form-group">
                <h4>
                    <%= f.label :name_field, "Edit #{@branch.name} Branch" %>
                </h4>
                <%= f.text_field :name, required: true, id: "branch_type_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
                <%= link_to "Delete Branch", office_branch_path(@branch.office, @branch), method: :delete, class: "btn btn-danger", data: { confirm: "Delete?" } %>
                <%= f.submit "Update Branch", class: "btn btn-success btn-lg" %>
                <%= link_to "Cancel", office_branches_path, class: "btn btn-info" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
