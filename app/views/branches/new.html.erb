<% provide(:title, "New Branch") %>

<%= form_for(@branch, url: office_branches_path(@office), html: { id: "branch-create-form" }) do |f| %>
  <h1 class="text-center">
    <%= "Create Branch for #{@office.company}" %>
  </h1>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Branch Location" %> </h4>
    <%= f.text_field :name, required: true, id: "branch_name_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :description_field, "Branch Description" %> </h4>
    <%= f.text_field :description, id: "branch_description_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">

    <%= f.submit "Create New Branch", class: "btn btn-success btn-lg" %>
    <%= link_to "Cancel", office_branches_path, class: 'btn btn-warning' %>
  </div>
<% end %>
