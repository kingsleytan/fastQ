<% provide(:title, "New Branch") %>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@branch, url: office_branches_path(@office), html: { id: "branch-create-form" }) do |f| %>
            <h2 class="text-center">
                <%= "New Branch for #{@office.company}" %>
            </h2>
            <br/>
            <div class="form-group">
                <h4>
                    <%= f.label :name_field, "Branch Location" %>
                </h4>
                <%= f.text_field :name, required: true, id: "branch_name_field", class: 'form-control' %>
            </div>

            <div class="form-group">
                <h4>
                    <%= f.label :description_field, "Branch Description" %>
                </h4>
                <%= f.text_field :description, id: "branch_description_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">

                <%= f.submit "Create New Branch", class: "btn btn-success" %>
                <%= link_to "Cancel", office_branches_path, class: 'btn btn-info' %>
            </div>
            <% end %>
        </div>
    </div>
</div>
