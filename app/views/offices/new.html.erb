<% provide(:title, "New Office") %>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="new">
                <div class="background-new text-center">
                    <h2 style="color: black">Create Office</h2>
                </div>
                <%= form_for(@office, url: offices_path, html: { id: "office-create-form" }) do |f| %>
                <div class="form-group">
                    <h4>
                        <%= f.label :company_field, "Company Name" %>
                    </h4>
                    <%= f.text_field :company, required: true, id: "office_company_field", class: 'form-control' %>
                </div>

                <div class="form-group">
                    <div id="preview-image">
                        <% if @office.image? %>
                        <%= image_tag office.image, class: "img-settings img-responsive" %>
                        <% end %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.file_field :image, id: "office_image_field", class: 'form-control image-uploader' %>
                </div>

                <div class="font-feature-new text-center">
                    <%= f.submit "Create office", class: "btn btn-success" %>
                    <%= link_to "Cancel", offices_path, class: "btn btn-info"%>
                </div>
                <% end %>

            </div>
        </div>
    </div>
</div>
