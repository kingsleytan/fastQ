<% provide(:title, "Ticket Orders") %>

<h2 class="jumbotron text-center">Your Orders</h2>

<div class="row">
    <aside class="col-md-6 col-md-offset-3">
        <div class="text-center">
            <% @orders.each do |order| %>
            <h2><%= link_to "Ticket for #{order.ticket.service.name}: #{order.ticket.service.branch.office.company}, #{order.ticket.service.branch.name} Branch", order_path(order) %></h2>

            <% end %>
        </div>
    </div>
</div>
