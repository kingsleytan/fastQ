<% provide(:title, "Edit Service") %>

<%= form_for(@service, url: office_branch_service_path(@service), html: { id: "service-edit-form" }) do |f| %>
  <h1 class="text-center">
    Edit Service
  </h1>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Service" %> </h4>
    <%= f.text_field :name, required: true, id: "serice_name_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= link_to "Cancel", office_branch_services_path(@service), class: 'btn btn-warning' %>
    <%= f.submit "Edit Service", class: "btn btn-success btn-lg" %>
    <%= link_to "Delete Service", office_branch_service_path(@service), method: :delete, class: 'btn btn-info', data: { confirm: "Sure?"} %>
  </div>
<% end %>
