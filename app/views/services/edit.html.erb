<% provide(:title, "Edit Service") %>

<%= form_for(@services, url: edit_service_path, html: { id: "service-edit-form" }) do |f| %>
  <h1 class="text-center">
    Edit Service
  </h1>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Service" %> </h4>
    <%= f.text_field :name, required: true, id: "serice_name_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= link_to "Cancel", '#', class: 'btn btn-warning' %>
    <%= f.submit "Edit Serice", class: "btn btn-success btn-lg" %>
    <%= link_to "Delete Service", '#', class: 'btn btn-info' %>
  </div>
<% end %>
