<% provide(:title, "Edit #{@service.name}") %>

<h1 class="text-center">
  Update The Service Here
</h1>

<%= form_for(@service, url: office_branch_service_path(@service), html: { id: "service-edit-form" }) do |f| %>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Edit #{@service.name}" %> </h4>
    <%= f.text_field :name, required: true, id: "serice_name_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= link_to "Delete Service", office_branch_service_path(@service), method: :delete, class: 'btn btn-danger', data: { confirm: "Sure?"} %>
    <%= f.submit "Edit Service", class: "btn btn-success btn-lg" %>
    <%= link_to "Cancel", office_branch_services_path(@service), class: 'btn btn-info' %>
  </div>
<% end %>
