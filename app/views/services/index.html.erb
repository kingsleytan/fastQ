<% provide(:title, "Services") %>

<div class="services">
  <div class="background">
    <h1 style="color: white; font-size: 50px">All Services</h1>
  </div>

  <!-- <div style="margin: 30px" class="form-group text-center">
    <%= link_to "Add new office", new_office_path, class: "btn btn-success" %>
  </div> -->

  <div class="service-array text-center">
    <% @services.each do |service| %>

    <div class="service-item">
      <h3 class="font-feature-1"><%= service.category %></h3>
      <%= link_to "View: #{service.category}", tickets_path(service_id: service.id), class: "btn btn-primary" %>
      <div style="margin: 5px" class="edit-office">
        <%= link_to "Edit: #{service.category}", edit_service_path(service), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>

  <div style="margin: 30px" class="form-group text-center">
    <%= link_to "Add new service", new_service_path(@service), class: "btn btn-success" %>
  </div>

</div>
