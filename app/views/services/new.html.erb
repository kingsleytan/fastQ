<% provide(:title, "New Service") %>

<div class="new">
  <div class="background-new">
    <h1 style="color: black">Create Service</h1>
  </div>
  <%= form_for(@service, url: services_path, html: { id: "service-create-form" }) do |f| %>

    <div class="form-group">
      <h4> <%= f.label :category_field, "Service Category" %> </h4>
      <%= f.text_field :category, required: true, id: "service_category_field", class: 'form-control' %>
    </div>

    <div class="font-feature-new text-center">
      <%= link_to "Back to all services", services_path, class: "btn btn-info"%>
      <%= f.submit "Create service", class: "btn btn-success" %>
    </div>
  <% end %>

</div>
