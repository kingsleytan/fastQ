<% provide(:title, "New Service") %>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">
                <%= "Create Service for #{@branch.name} #{@office.company} Branch" %>
            </h1>
            <%= form_for(@service, url: office_branch_services_path(@branch) , html: { id: "branch-create-form" }) do |f| %>

            <div class="form-group">
                <h4>
                    <%= f.label :name_field, "New Service" %>
                </h4>
                <%= f.text_field :name, required: true, id: "service_name_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
                <%= f.submit "New Service", class: "btn btn-success" %>
                <%= link_to "Cancel", office_branch_services_path, class: 'btn btn-info' %>
            </div>
            <% end %>
        </div>
    </div>
</div>
