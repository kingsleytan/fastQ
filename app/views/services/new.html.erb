<% provide(:title, "New Service") %>

<%= form_for(@service, url: services_path(branch_id: @branch.id), html: { id: "branch-create-form" }) do |f| %>
  <h1 class="text-center">
    Create Service
  </h1>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Service Type" %> </h4>
    <%= f.text_field :name, required: true, id: "service_name_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Create New Service", class: "btn btn-success btn-lg" %>
    <%= link_to "Back to branch", '#', class: 'btn btn-info' %>
  </div>
<% end %>
